<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup
        android:id="@+id/filter_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginLeft="33dp"
        android:layout_marginEnd="136dp"
        android:layout_marginRight="136dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.495">

        <TextView
            android:id="@+id/filterTitle"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:text="Filter By:"
            android:textSize="18dp" />

        <CheckBox
            android:id="@+id/everyoneF"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:text="Everyone" />

        <CheckBox
            android:id="@+id/womenF"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="Women" />

        <CheckBox
            android:id="@+id/asianF"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:text="@string/asian" />

        <CheckBox
            android:id="@+id/hispanicF"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:text="Latino/Hispanic" />

        <CheckBox
            android:id="@+id/blackF"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:text="African American/Afro-Carribean/Black" />

        <CheckBox
            android:id="@+id/indigenousF"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:text="Indigenous" />

        <CheckBox
            android:id="@+id/middleeasternF"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:text="Middle Eastern" />

        <CheckBox
            android:id="@+id/scholarshipsF"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:text="Scholarships" />

        <CheckBox
            android:id="@+id/bursariesF"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:text="Bursaries" />

        <CheckBox
            android:id="@+id/researchF"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:text="Research" />

        <CheckBox
            android:id="@+id/highschoolF"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:text="High School" />

        <CheckBox
            android:id="@+id/undergraduateF"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:text="Undergraduate" />

        <CheckBox
            android:id="@+id/graduateF"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:text="Graduate" />

        <CheckBox
            android:id="@+id/continuingeducationF"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:text="Continuing Education" />

        <CheckBox
            android:id="@+id/veteranF"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:text="Veteran" />

        <CheckBox
            android:id="@+id/singleparentF"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:text="Single Parent" />

        <CheckBox
            android:id="@+id/disabilityF"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:text="Disability" />

    </RadioGroup>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/buttonToRecommendations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="auto"
        android:rotation="90"
        android:rotationX="-2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.845"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.912"
        app:srcCompat="@android:drawable/arrow_up_float" />


</androidx.constraintlayout.widget.ConstraintLayout>